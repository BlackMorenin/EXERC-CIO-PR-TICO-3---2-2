    <div class="theme-toggle" title="Alternar tema">
        <span>ðŸŒ™</span>
    </div>
    
    <div class="container">
        <h1>Gerador de Lista</h1>
        <p class="description">Digite um nÃºmero para gerar uma lista numerada com seu nome.</p>
        
        <div class="input-group">
            <label for="numero">Digite um nÃºmero:</label>
            <input type="number" id="numero" placeholder="Ex: 5" min="1" max="20">
            <button id="btnGerar">Gerar Lista</button>
        </div>
        
        <div id="mensagem">
            <!-- Aqui serÃ¡ exibida a mensagem de erro ou a lista -->
        </div>
        
        <div class="footer">
            <p>Gerador de lista desenvolvido para trabalho da faculdade</p>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const numeroInput = document.getElementById('numero');
            const btnGerar = document.getElementById('btnGerar');
            const mensagemDiv = document.getElementById('mensagem');
            const themeToggle = document.querySelector('.theme-toggle');
            
            btnGerar.addEventListener('click', function() {
                const numero = parseInt(numeroInput.value);
                
                
                mensagemDiv.innerHTML = '';
                mensagemDiv.className = '';
                
                if (isNaN(numero) || numero <= 0) {
                    mensagemDiv.textContent = 'Por favor, insira um nÃºmero vÃ¡lido.';
                    mensagemDiv.className = 'mensagem-erro';
                } else {
                    
                    const numeroLimitado = Math.min(numero, 20);
                    
                    
                    const listaContainer = document.createElement('div');
                    listaContainer.className = 'lista-container';
                    
                    const titulo = document.createElement('h3');
                    titulo.textContent = `Lista com ${numeroLimitado} itens:`;
                    listaContainer.appendChild(titulo);
                    
                    const lista = document.createElement('ol');
                    
                    for (let i = 1; i <= numeroLimitado; i++) {
                        const item = document.createElement('li');
                        item.textContent = `Item ${i} - Seu Nome`;
                        lista.appendChild(item);
                    }
                    
                    listaContainer.appendChild(lista);
                    mensagemDiv.appendChild(listaContainer);
                }
            });
            
            
            numeroInput.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    btnGerar.click();
                }
            });
            
            
            let placeholderText = "Ex: 5";
            let i = 0;
            let typingSpeed = 100;
            
            function typePlaceholder() {
                if (i < placeholderText.length) {
                    numeroInput.placeholder += placeholderText.charAt(i);
                    i++;
                    setTimeout(typePlaceholder, typingSpeed);
                }
            }
            
            
            setTimeout(() => {
                numeroInput.placeholder = "";
                typePlaceholder();
            }, 1000);
        });
    </script>
</body>
