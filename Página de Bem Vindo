<body>
    <div class="container">
        <h1>Bem-vindo!</h1>
        <p class="description">Digite seu nome no campo abaixo e clique no botão.</p>
        <div class="input-group">
            <label for="nome">Digite seu nome:</label>
            <input type="text" id="nome" placeholder="Seu nome">
            <button id="btnClique">Clique aqui</button>
        </div>
        
        <div id="mensagem">
            <!-- Seja muito bem vindo(a) ao nosso Campus -->
        </div>
        
        <div class="footer">
            <p>Universidade Estácio de Sá</p>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const nomeInput = document.getElementById('nome');
            const btnClique = document.getElementById('btnClique');
            const mensagemDiv = document.getElementById('mensagem');
            
            btnClique.addEventListener('click', function() {
                const nome = nomeInput.value.trim();
                
                if (nome === '') {
                    mensagemDiv.textContent = 'Por favor, insira seu nome.';
                    mensagemDiv.className = 'mensagem-vazia';
                } else {
                    mensagemDiv.innerHTML = `Olá, <strong>${nome}</strong>! Seja bem-vindo à página do aluno(a).`;
                    mensagemDiv.className = 'mensagem-sucesso';
                }
            });
            
            // Adiciona funcionalidade de pressionar Enter para enviar
            nomeInput.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    btnClique.click();
                }
            });
        });
    </script>
</body>
